<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:tns="http://www.library.com/library-ws"
           targetNamespace="http://www.library.com/library-ws" elementFormDefault="qualified">

    <!-- Login -->
    <xs:element name="loginRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="email" type="xs:string"/>
                <xs:element name="password" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="loginResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="user" type="tns:UserInfo"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <!-- Logout (not OK)-->
    <xs:element name="logoutRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="id" type="tns:UserInfo" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="logoutResponse">
        <xs:complexType />
    </xs:element>
    <!-- method of search book -->
    <!-- get all books -->
    <xs:element name="getAllBookRequest">
        <xs:complexType/>
    </xs:element>
    <xs:element name="getAllBookResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="books" type="tns:BookInfo" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <!-- get book -->
    <xs:element name="getBookRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="title" type="xs:string"  minOccurs="0"/>
                <xs:element name="author" type="xs:string"  minOccurs="0"/>
                <xs:element name="bookType" type="tns:BookTypeInfo"  minOccurs="0"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="getBookResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="book" type="tns:BookInfo" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getBookByTitleRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="title" type="xs:string"  minOccurs="0"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="getBookByTitleResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="book" type="tns:BookInfo" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:complexType name="BookInfo">
        <xs:sequence>
            <xs:element name="idBook" type="xs:int"/>
            <xs:element name="title" type="xs:string"/>
            <xs:element name="bookType" type="tns:BookTypeInfo"/>
            <xs:element name="pageNb" type="xs:int"/>
            <xs:element name="releaseDate" type="xs:date"/>
            <xs:element name="copiesNb" type="xs:int"/>
            <xs:element name="author" type="tns:AuthorInfo"/>
            <xs:element name="editor" type="tns:EditorInfo"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="AuthorInfo">
        <xs:sequence>
            <xs:element name="idAuthor" type="xs:int"/>
            <xs:element name="firstName" type="xs:string"/>
            <xs:element name="lastName" type="xs:string"/>
            <xs:element name="birthDate" type="xs:date"/>
            <xs:element name="nationality" type="xs:string"/>
            <xs:element name="books" type="tns:BookInfo" maxOccurs="unbounded" minOccurs="0" />
        </xs:sequence>
    </xs:complexType>
    <xs:simpleType name="BookTypeInfo">
        <xs:restriction base="xs:string">
            <xs:enumeration value="SCIENCE_FICTION"/>
            <xs:enumeration value="POLICIER"/>
            <xs:enumeration value="ROMAN_HISTORIC"/>
            <xs:enumeration value="HEROIC_FANTASY"/>
        </xs:restriction>
    </xs:simpleType>
    <xs:complexType name="BorrowingBookInfo">
        <xs:sequence>
            <xs:element name="idBorrowingBook" type="xs:int"/>
            <xs:element name="borrowingDate" type="xs:date"/>
            <xs:element name="returnDate" type="xs:date"/>
            <xs:element name="isReturn" type="xs:boolean"/>
            <xs:element name="extension" type="xs:boolean"/>
            <xs:element name="user" type="tns:BookInfo"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="EditorInfo">
        <xs:sequence>
            <xs:element name="idEditor" type="xs:int"/>
            <xs:element name="name" type="xs:string"/>
            <xs:element name="city" type="xs:string"/>
            <xs:element name="country" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="UserInfo">
        <xs:sequence>
            <xs:element name="idUser" type="xs:int"/>
            <xs:element name="firstName" type="xs:string"/>
            <xs:element name="lastName" type="xs:string"/>
            <xs:element name="email" type="xs:string"/>
            <xs:element name="password" type="xs:string"/>
            <xs:element name="isAdmin" type="xs:boolean"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="AddressInfo">
        <xs:sequence>
            <xs:element name="idAddress" type="xs:int"/>
            <xs:element name="streetNumber" type="xs:int"/>
            <xs:element name="address" type="xs:string"/>
            <xs:element name="zipCode" type="xs:int"/>
            <xs:element name="city" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>
